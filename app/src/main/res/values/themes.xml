<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeanTech" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/danube</item>
        <item name="colorPrimaryVariant">@color/danube_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/danube_200</item>
        <item name="colorSecondaryVariant">@color/danube_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MainFragmentStyle">
        <item name="backgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/fragment_margin</item>
    </style>

    <style name="RegistrationFragmentStyle">
        <item name="android:background">@drawable/background_gradient_black_danube</item>
    </style>

    <style name="OutlinedButtonDanube" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/danube</item>
    </style>

    <style name="OutlinedButtonDanube.2">
        <item name="strokeWidth">@dimen/button_width_stroke</item>
    </style>

    <style name="OutlinedButtonDanube.2.TextDanube">
        <item name="android:textColor">@color/danube</item>
    </style>

    <style name="OutlinedTextInputDanube" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_border_danube</item>
    </style>

    <style name="OutlinedTextInputDanube.2">
        <item name="boxStrokeWidth">@dimen/text_input_width_stroke</item>
    </style>

    <style name="OutlinedTextInputDanube.2.HintDanube">
        <item name="android:textColorHint">@color/danube</item>
    </style>

    <style name="Text" />

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>
